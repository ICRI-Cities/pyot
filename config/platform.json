{
  "threadRestartRate": 3600,
  "sensorSampleRate": 20,
  "iotSendRate": 40,
  "timer": "default",
  
  "sensors": [
    {
      "name": "as_opc_n1_pm10",
      "path": "/galileo/particulate:pm10",
      "numSamples": 1,
      "timeBetweenSamples": 0
    },
    {
      "name": "as_opc_n1_pm25",
      "path": "/galileo/particulate:pm25",
      "numSamples": 1,
      "timeBetweenSamples": 0
    },
    {
      "name": "as_opc_n1_pm100",
      "path": "/galileo/particulate:pm100",
      "numSamples": 1,
      "timeBetweenSamples": 0
    }
  ],
  
  "iot": [
    {
      "name": "enableiot",
      "path": "/galileo/enableiot:mqtt"
    }
  ],
  
  "platform": {
    "name": "galileo",
    "class": "platform.IntelGalileo",
    "params": {
      ".": {
        "build": {},
        "connect": {},
        "init": {}
      }
    },
    "peripherals": [
      {
        "name": "particulate",
        "class": "sensor.AlphaSenseOPC_N1",
        "params": {
          "root": {
            "build": {},
            "connect": {
              "port": "../.:spi1"
            },
            "init": {
              "minTimeBetweenSamples": 2
            }
          }
        },
        "peripherals": []
      },
      {
        "name": "enableiot",
        "class": "backend.IntelIoTAnalytics",
        "params": {
          "mqtt": {
            "build": {},
            "connect": {},
            "init": {
              "broker": "broker.us.enableiot.com",
              "brokerPort": 8883,
              "certs": "/usr/lib/node_modules/iotkit-agent/certs/AddTrust_External_Root.pem",
              "qos": 1,
              "deviceID": "ICRI_TEST",
              "accountID": "xxx",
              "token": "None",
              "timeout": 10
            }
          }
        },
        "peripherals": []
      }
    ]
  }
}